// Regras de segurança do Firestore
// Cole estas regras no Firebase Console > Firestore Database > Regras

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Usuários podem ler e escrever seus próprios dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Todos os usuários autenticados podem ler informações básicas de outros usuários
      allow read: if request.auth != null;
    }
    
    // Regras para a coleção de eventos
    match /events/{eventId} {
      // Todos os usuários autenticados podem ler eventos
      allow read: if request.auth != null;
      
      // Usuários podem criar eventos para si mesmos
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Administradores podem criar eventos para qualquer usuário
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Usuários podem deletar seus próprios eventos
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Administradores podem deletar qualquer evento
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Usuários podem atualizar seus próprios eventos
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Administradores podem atualizar qualquer evento
      allow update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para a coleção de notificações
    match /notifications/{notificationId} {
      // Usuários podem ler suas próprias notificações
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Usuários podem atualizar suas próprias notificações (marcar como lida)
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Usuários podem deletar suas próprias notificações
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Administradores podem deletar qualquer notificação
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Apenas administradores podem criar notificações
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para configurações do sistema (apenas administradores)
    match /settings/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}